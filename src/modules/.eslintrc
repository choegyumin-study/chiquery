{
	"ecmaFeatures": {
		"modules": true,
		"spread" : true,
		"restParams" : true
	},
	"env": {
		"browser" : true,
		"node" : true,
		"es6": true
	},
	"globals": {
		"window": true,
		"chiQuery": true
	},
	"rules": {
		"strict": [
			"error",
			"function"
		],
		"indent": [
			"error",
			"tab",
			{
				"SwitchCase": 1
			}
		],
		"linebreak-style": [
			"error",
			"unix"
		],
//		"quotes": [
//			"error",
//			"single"
//		],
		"semi": [
			"error",
			"always"
		],
		"comma-dangle": [
			"error",
			"never"
		],
		"no-console": [
			"error",
			{
				"allow": [
					"warn",
					"error"
				]
			}
		]
	}
}
