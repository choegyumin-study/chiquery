{
	"env": {
		"amd": true,
		"es6": true,
		"mocha": true
	},
	"globals": {
		"window": true,
		"chiQuery": true
	},
	"rules": {
		"indent": ["error", "tab"],
		"linebreak-style": ["error", "unix"],
		"quotes": ["error", "single"],
		"semi": ["error", "always"],

		"comma-dangle": ["error", "always"],
		"no-cond-assign": ["error", "always"],

		"no-console": "off",

		"strict": ["error", "function"]
	}
}
